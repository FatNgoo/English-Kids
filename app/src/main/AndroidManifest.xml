<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for AR -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Microphone permission for Speech Recognition -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Internet permission for Google Speech Recognition -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- AR feature - optional so app works on non-AR devices -->
    <!-- AR feature - optional because we have 2D fallback -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="false" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
        android:name=".magicmelody.MagicMelodyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.English">
        
        <!-- ARCore metadata - optional for devices without AR -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="optional" />
        
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.English.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity - Home Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
        
        <!-- Games Activity - Games Selection -->
        <activity
            android:name=".GamesActivity"
            android:exported="false">
        </activity>
        
        <!-- Colors Main Activity -->
        <activity
            android:name=".coloralchemy.ColorsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Colors">
        </activity>
        
        <!-- Color Alchemy Lab Activity -->
        <activity
            android:name=".coloralchemy.ColorAlchemyActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.English.Fullscreen">
        </activity>
        
        <!-- Animals AR Selection Activity -->
        <activity
            android:name=".AnimalArSelectActivity"
            android:exported="false"
            android:label="Animals AR">
        </activity>
        
        <!-- Animals AR Viewer Activity -->
        <activity
            android:name=".AnimalArViewerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="AR Viewer">
        </activity>
        
        <!-- Shapes Learning Activity -->
        <activity
            android:name=".shapes.ShapesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Shapes">
        </activity>
        
        <!-- Alphabet Adventure - Mascot Selection -->
        <activity
            android:name=".alphabet_adventure.screens.MascotSelectActivity"
            android:exported="false"
            android:screenOrientation="portrait">
        </activity>
        
        <!-- Alphabet Adventure - Game Screen -->
        <activity
            android:name=".alphabet_adventure.screens.AlphabetGameActivity"
            android:exported="false"
