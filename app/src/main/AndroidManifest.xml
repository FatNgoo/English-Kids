            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Magic Storybook">
        </activity>

        <!-- Magic Storybook - Story Reader -->
        <activity
            android:name=".storybook.StoryReaderActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Story Reader">
        </activity>

        <!-- Magic Storybook - Story Library -->
        <activity
            android:name=".storybook.StoryLibraryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="My Library">
        
