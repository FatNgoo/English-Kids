<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A855F7"
                android:endColor="#9333EA"
                android:angle="135"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Stars decoration -->
    <item android:gravity="top|start" android:top="16dp" android:left="16dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
    
    <item android:gravity="top|end" android:top="24dp" android:right="24dp">
        <shape android:shape="oval">
            <solid android:color="#50FFFFFF"/>
            <size android:width="12dp" android:height="12dp"/>
        </shape>
    </item>
    
    <item android:gravity="center|end" android:right="16dp">
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF"/>
            <size android:width="6dp" android:height="6dp"/>
        </shape>
    </item>
    
    <!-- Castle silhouette hint -->
    <item android:gravity="bottom" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000"/>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
            <size android:height="50dp"/>
        </shape>
    </item>
</layer-list>
