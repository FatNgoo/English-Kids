<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D97706"
                android:endColor="#B45309"
                android:angle="135"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Parchment/scroll effect -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Seal decoration -->
    <item android:gravity="bottom|end" android:bottom="12dp" android:right="12dp">
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF"/>
            <stroke android:width="2dp" android:color="#40FFFFFF"/>
            <size android:width="28dp" android:height="28dp"/>
        </shape>
    </item>
</layer-list>
