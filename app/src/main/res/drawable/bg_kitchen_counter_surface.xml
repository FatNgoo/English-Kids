<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Counter Top Surface (granite/marble look) -->
    <item android:bottom="120dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ECEFF1"
                android:endColor="#CFD8DC"
                android:angle="0"/>
        </shape>
    </item>
    
    <!-- Counter Front (wood cabinet) -->
    <item android:top="60dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8D6E63"
                android:centerColor="#6D4C41"
                android:endColor="#5D4037"
                android:angle="270"/>
        </shape>
    </item>
    
    <!-- Counter Edge Highlight -->
    <item android:top="55dp" android:bottom="125dp">
        <shape android:shape="rectangle">
            <solid android:color="#A1887F"/>
        </shape>
    </item>
</layer-list>
