<?xml version="1.0" encoding="utf-8"?>
<!-- Kitchen countertop - simplified without percentage values -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Kitchen wall (light beige) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#F5F5F0"
                android:centerColor="#EEEEE8"
                android:endColor="#E8E8E2" />
        </shape>
    </item>
    
    <!-- Countertop gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:centerColor="#208D7B6B"
                android:endColor="#408D7B6B" />
        </shape>
    </item>
    
</layer-list>
