<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kitchen wall -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFECB3"
                android:centerColor="#FFE082"
                android:endColor="#FFCC80"/>
        </shape>
    </item>
    
    <!-- Counter top -->
    <item android:top="400dp">
        <shape android:shape="rectangle">
            <solid android:color="#8D6E63"/>
        </shape>
    </item>
    
    <!-- Tiles pattern hint -->
    <item android:bottom="200dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFCA28" android:dashWidth="20dp" android:dashGap="20dp"/>
        </shape>
    </item>
</layer-list>
