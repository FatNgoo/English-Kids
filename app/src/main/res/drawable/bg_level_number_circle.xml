<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFD700"
                android:endColor="#FF9500"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Inner circle -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FFC107"
                android:angle="135" />
        </shape>
    </item>
</layer-list>
