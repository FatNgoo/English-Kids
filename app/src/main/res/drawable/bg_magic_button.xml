<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
        </shape>
    </item>
    
    <!-- Outer glow -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#E040FB"
                android:endColor="#7C4DFF"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Shine -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="14dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#50FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135" />
        </shape>
    </item>
</layer-list>
