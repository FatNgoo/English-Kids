<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient - Purple to Deep Blue (magical night sky) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A0533"
                android:centerColor="#2D1B69"
                android:endColor="#11001C"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Stars overlay pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
