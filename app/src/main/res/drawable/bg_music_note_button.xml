<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
        </shape>
    </item>
    
    <!-- Main button -->
    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#00E676"
                android:endColor="#00C853"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Shine -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="24dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135" />
        </shape>
    </item>
</layer-list>
