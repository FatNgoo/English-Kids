<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ–¼ï¸ Puzzle Frame Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    <!-- Frame border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="4dp" android:color="#8B4513" />
            <solid android:color="#2A1A0A" />
        </shape>
    </item>
    <!-- Inner glow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#DAA520" />
        </shape>
    </item>
</layer-list>
