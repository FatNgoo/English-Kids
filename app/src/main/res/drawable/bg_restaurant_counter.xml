<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Restaurant wall - warm beige -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFECD2"
                android:centerColor="#FCB69F"
                android:endColor="#FFECD2"
                android:angle="135"/>
        </shape>
    </item>
    
    <!-- Decorative horizontal stripe -->
    <item android:top="120dp" android:bottom="450dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
        </shape>
    </item>
</layer-list>
