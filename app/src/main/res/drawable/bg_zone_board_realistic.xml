<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Wood base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D7CCC8"/>
            <corners android:radius="12dp"/>
            <stroke android:width="4dp" android:color="#8D6E63"/>
        </shape>
    </item>
    <!-- Wood grain lines - using fixed dp values -->
    <item android:left="16dp" android:right="16dp" android:top="25dp" android:bottom="95dp">
        <shape android:shape="rectangle">
            <solid android:color="#BCAAA4"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:left="16dp" android:right="16dp" android:top="55dp" android:bottom="65dp">
        <shape android:shape="rectangle">
            <solid android:color="#BCAAA4"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:left="16dp" android:right="16dp" android:top="85dp" android:bottom="35dp">
        <shape android:shape="rectangle">
            <solid android:color="#BCAAA4"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
