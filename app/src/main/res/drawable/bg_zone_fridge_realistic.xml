<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fridge body -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3E5FC"/>
            <corners android:radius="16dp"/>
            <stroke android:width="3dp" android:color="#4FC3F7"/>
        </shape>
    </item>
    <!-- Freezer section (top) -->
    <item android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#E1F5FE"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>
    <!-- Divider line -->
    <item android:top="50dp" android:bottom="70dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#81D4FA"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <!-- Handle -->
    <item android:top="30dp" android:bottom="70dp" android:left="4dp" android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#90A4AE"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
