<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stove background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#455A64"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Burner ring outer -->
    <item android:gravity="center" android:width="120dp" android:height="120dp">
        <shape android:shape="oval">
            <solid android:color="#37474F"/>
            <stroke android:width="6dp" android:color="#FF5722"/>
        </shape>
    </item>
    <!-- Burner ring inner -->
    <item android:gravity="center" android:width="80dp" android:height="80dp">
        <shape android:shape="oval">
            <solid android:color="#263238"/>
            <stroke android:width="3dp" android:color="#FF8A65"/>
        </shape>
    </item>
    <!-- Pan base -->
    <item android:gravity="center" android:width="100dp" android:height="100dp">
        <shape android:shape="oval">
            <solid android:color="#424242"/>
            <stroke android:width="4dp" android:color="#757575"/>
        </shape>
    </item>
    <!-- Pan inner surface -->
    <item android:gravity="center" android:width="80dp" android:height="80dp">
        <shape android:shape="oval">
            <solid android:color="#616161"/>
        </shape>
    </item>
</layer-list>
