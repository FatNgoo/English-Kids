<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Table/counter background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFEBE9"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Plate outer rim -->
    <item android:gravity="center" android:width="140dp" android:height="140dp">
        <shape android:shape="oval">
            <solid android:color="#FAFAFA"/>
            <stroke android:width="4dp" android:color="#E0E0E0"/>
        </shape>
    </item>
    <!-- Plate rim decoration -->
    <item android:gravity="center" android:width="120dp" android:height="120dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#FFCC80"/>
        </shape>
    </item>
    <!-- Plate center -->
    <item android:gravity="center" android:width="100dp" android:height="100dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>
