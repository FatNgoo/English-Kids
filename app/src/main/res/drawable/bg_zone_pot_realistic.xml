<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stove background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#455A64"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Burner ring -->
    <item android:gravity="center" android:width="130dp" android:height="130dp">
        <shape android:shape="oval">
            <solid android:color="#37474F"/>
            <stroke android:width="6dp" android:color="#FF7043"/>
        </shape>
    </item>
    <!-- Pot body -->
    <item android:gravity="center" android:width="110dp" android:height="90dp">
        <shape android:shape="oval">
            <solid android:color="#78909C"/>
            <stroke android:width="3dp" android:color="#546E7A"/>
        </shape>
    </item>
    <!-- Pot inner -->
    <item android:gravity="center" android:width="90dp" android:height="70dp">
        <shape android:shape="oval">
            <solid android:color="#90A4AE"/>
        </shape>
    </item>
    <!-- Pot handles left -->
    <item android:gravity="center|left" android:width="20dp" android:height="16dp" android:left="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#546E7A"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Pot handles right -->
    <item android:gravity="center|right" android:width="20dp" android:height="16dp" android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#546E7A"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
