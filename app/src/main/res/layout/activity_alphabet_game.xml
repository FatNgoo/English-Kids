<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game_alphabet"
    tools:context=".alphabet_adventure.screens.AlphabetGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_button_circle"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Hearts -->
            <LinearLayout
                android:id="@+id/hearts_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="â¤ï¸"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="â¤ï¸"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Control buttons -->
            <ImageButton
                android:id="@+id/btn_mute"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_button_circle"
                android:contentDescription="Mute"
                android:src="@drawable/ic_volume_on"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_circle"
                android:contentDescription="Pause"
                android:src="@drawable/ic_pause"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Word Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Emoji and Speaker Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/word_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ"
                        android:textSize="64sp" />

                    <ImageButton
                        android:id="@+id/btn_speaker"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_button_speaker"
                        android:contentDescription="Speak"
                        android:src="@drawable/ic_speaker"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Word Progress -->
                <TextView
                    android:id="@+id/word_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.2"
                    android:text="_ _ _ _ _"
                    android:textColor="@color/deep_blue"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Game Area -->
        <FrameLayout
            android:id="@+id/game_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_lanes_gradient"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Lane Highlight -->
            <View
                android:id="@+id/lane_highlight"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_lane_highlight" />

            <!-- Mascot -->
            <TextView
                android:id="@+id/mascot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:elevation="8dp"
                android:text="ðŸ°"
                android:textSize="48sp" />

            <!-- Wrong indicator flash -->
            <View
                android:id="@+id/wrong_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_wrong_flash"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Control Buttons - Hidden, using swipe gestures instead -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:visibility="gone">

            <!-- Down Button -->
            <LinearLayout
                android:id="@+id/btn_down"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_control"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¬‡ï¸"
                    android:textSize="32sp" />
            </LinearLayout>

            <!-- Up Button -->
            <LinearLayout
                android:id="@+id/btn_up"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_control"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¬†ï¸"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Win Overlay -->
    <FrameLayout
        android:id="@+id/win_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Confetti Container -->
            <FrameLayout
                android:id="@+id/confetti_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸŽ‰"
                    android:textSize="80sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="ðŸŒŸ Congratulations! ðŸŒŸ"
                android:textColor="@color/shape_yellow"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="You spelled the word correctly!"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/btn_next_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_button_start"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="NEXT WORD âž¡ï¸"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Lose Overlay -->
    <FrameLayout
        android:id="@+id/lose_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜¢"
                android:textSize="80sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Oh no!"
                android:textColor="@color/card_pink"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="The correct word was:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/correct_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.3"
                android:text="APPLE"
                android:textColor="@color/shape_yellow"
                android:textSize="36sp" />

            <LinearLayout
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_button_retry"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="ðŸ”„ TRY AGAIN"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Pause Overlay -->
    <FrameLayout
        android:id="@+id/pause_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¸ï¸"
                android:textSize="80sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Game Paused"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <LinearLayout
                android:id="@+id/btn_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_button_start"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="â–¶ï¸ RESUME"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
