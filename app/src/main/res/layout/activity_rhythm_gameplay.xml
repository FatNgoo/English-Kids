<?xml version="1.0" encoding="utf-8"?>
<!--
    ðŸŽµ Rhythm Gameplay Layout with Puzzle Scene
    
    Purpose: Main rhythm game screen with puzzle pieces that awaken
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".magicmelody.ui.gameplay.RhythmGameplayActivity">

    <!-- ðŸ§© PUZZLE SCENE - 3x3 Grid of puzzle pieces -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/puzzle_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:background="@drawable/bg_puzzle_frame"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/note_lanes_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:columnCount="3"
        app:rowCount="3"
        app:useDefaultMargins="false">

        <!-- Puzzle pieces will be added dynamically -->

    </androidx.gridlayout.widget.GridLayout>

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#40000000"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Pause Button -->
        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_pause"
            android:padding="8dp"
            android:contentDescription="Pause"
            app:tint="@color/white" />

        <!-- World Name -->
        <TextView
            android:id="@+id/world_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Forest Kingdom"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Score -->
        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="0"
            android:textColor="@color/badge_gold"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Progress & Phase Info -->
    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#66000000"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/puzzle_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Progress Text (Notes hit / Lives) -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="0/20 â¤ï¸5"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:background="#40FFFFFF" />

        <!-- Phase Indicator -->
        <TextView
            android:id="@+id/phase_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="ðŸŽµ Phase 1"
            android:textColor="#FFD700"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:background="#40FFFFFF" />

        <!-- Puzzle Progress -->
        <TextView
            android:id="@+id/puzzle_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="ðŸ§© 0/8"
            android:textColor="#00FF88"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Combo Counter -->
    <TextView
        android:id="@+id/combo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="COMBO x5"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/info_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Note Lanes Container with RhythmGameView -->
    <FrameLayout
        android:id="@+id/note_lanes_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/combo_text"
        app:layout_constraintBottom_toTopOf="@id/hit_zone">

        <!-- RhythmGameView for falling notes -->
        <com.edu.english.magicmelody.ui.gameplay.views.RhythmGameView
            android:id="@+id/rhythmGameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Piano Keys Hit Zone -->
    <LinearLayout
        android:id="@+id/hit_zone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#1A1A2E"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Piano Key 1 - Red -->
        <View
            android:id="@+id/piano_key_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/bg_piano_key_red" />

        <!-- Piano Key 2 - Teal -->
        <View
            android:id="@+id/piano_key_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/bg_piano_key_teal" />

        <!-- Piano Key 3 - Yellow -->
        <View
            android:id="@+id/piano_key_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/bg_piano_key_yellow" />

        <!-- Piano Key 4 - Mint -->
        <View
            android:id="@+id/piano_key_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/bg_piano_key_mint" />

    </LinearLayout>

    <!-- Feedback Text (Perfect/Good/Miss) -->
    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="PERFECT!"
        android:textColor="@color/badge_gold"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/hit_zone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>