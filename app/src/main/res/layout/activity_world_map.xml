<?xml version="1.0" encoding="utf-8"?>
<!--
    ðŸ—ºï¸ World Map Layout
    
    Purpose: 3D World map for Magic Melody game navigation
    - Shows 5 kingdoms (Forest, Ocean, Mountain, Desert, Sky)
    - Progress indicator with stars
    - Access to Magic Notebook
    
    Design: Fantasy world map with environmental evolution
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_world_map"
    tools:context=".magicmelody.ui.worldmap.WorldMapActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_settings"
            android:padding="10dp"
            android:contentDescription="Settings"
            app:tint="@color/white" />

        <!-- Stars Counter -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_star_filled"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="sans-serif-black"
                android:text="0"
                android:textColor="@color/badge_gold"
                android:textSize="22sp" />

        </LinearLayout>

        <!-- Magic Notebook Button -->
        <ImageButton
            android:id="@+id/notebook_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_book"
            android:padding="10dp"
            android:contentDescription="Magic Notebook"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_text_label"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="Welcome back, little maestro! ðŸŽµ"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- World Map Container (5 Worlds) -->
    <LinearLayout
        android:id="@+id/world_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintBottom_toTopOf="@id/instruction_text">

        <!-- Top Row: Forest & Ocean -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Forest Kingdom -->
            <LinearLayout
                android:id="@+id/world_forest"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_world_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_world_forest"
                    android:contentDescription="Forest Kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Forest"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- Level Progress -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/10 â­"
                    android:textColor="@color/badge_gold"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Ocean Kingdom -->
            <LinearLayout
                android:id="@+id/world_ocean"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_world_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.6">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_world_ocean"
                    android:contentDescription="Ocean Kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Ocean"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Locked"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Middle Row: Mountain -->
        <LinearLayout
            android:id="@+id/world_mountain"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_world_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0.5">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_world_mountain"
                android:contentDescription="Mountain Kingdom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Mountain"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ Locked"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Bottom Row: Desert & Sky -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Desert Kingdom -->
            <LinearLayout
                android:id="@+id/world_desert"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_world_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.4">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_world_desert"
                    android:contentDescription="Desert Kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Desert"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Locked"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- Sky Kingdom -->
            <LinearLayout
                android:id="@+id/world_sky"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_world_button"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.3">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_world_sky"
                    android:contentDescription="Sky Kingdom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sky"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Locked"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:text="Tap a kingdom to start your adventure! ðŸŽ¶"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
