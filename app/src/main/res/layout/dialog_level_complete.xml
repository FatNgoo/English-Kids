<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Stars Display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/star3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star_empty"/>
    </LinearLayout>

    <!-- Score Display -->
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Score: 180"
        android:textSize="28sp"
        android:textColor="@color/yellow_gold"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Message -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Perfect cooking!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_cyan"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 2m 30s"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_errors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Errors: 0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_perfect_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect Steps: 18/18"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_replay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/replay"
            android:background="@drawable/bg_button_secondary"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/continue_text"
            android:background="@drawable/bg_button_continue"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- New Dish Unlocked (optional) -->
    <TextView
        android:id="@+id/tv_unlock_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ðŸŽ‰ Level 2 Unlocked!"
        android:textSize="16sp"
        android:textColor="@color/yellow_gold"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
</LinearLayout>
