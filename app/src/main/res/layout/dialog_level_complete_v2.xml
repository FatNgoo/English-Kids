<?xml version="1.0" encoding="utf-8"?>
<!-- Improved Level Complete Dialog - Master Chef theme -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_cooking">

    <!-- Title with cooking emoji -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ðŸ‘¨â€ðŸ³ Level Complete! ðŸ‘¨â€ðŸ³"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FF6F00"
        android:layout_marginBottom="16dp"/>

    <!-- Stars Display with animation-ready container -->
    <LinearLayout
        android:id="@+id/stars_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:id="@+id/star2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_star_empty"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:id="@+id/star3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_star_empty"/>
    </LinearLayout>

    <!-- Score Display - Large and prominent -->
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Score: 180"
        android:textSize="32sp"
        android:textColor="#FF6F00"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Message based on performance -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ðŸŽ‰ Perfect cooking! You're a real chef! ðŸŽ‰"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Stats Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFF8E1"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸"
                    android:textSize="24sp"/>
                    
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2m 30s"
                    android:textSize="14sp"
                    android:textColor="#5D4037"
                    android:textStyle="bold"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="11sp"
                    android:textColor="#8D6E63"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFCC80"/>

            <!-- Errors -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âŒ"
                    android:textSize="24sp"/>
                    
                <TextView
                    android:id="@+id/tv_errors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#5D4037"
                    android:textStyle="bold"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Errors"
                    android:textSize="11sp"
                    android:textColor="#8D6E63"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFCC80"/>

            <!-- Perfect Steps -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="24sp"/>
                    
                <TextView
                    android:id="@+id/tv_perfect_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/18"
                    android:textSize="14sp"
                    android:textColor="#5D4037"
                    android:textStyle="bold"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect"
                    android:textSize="11sp"
                    android:textColor="#8D6E63"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Buttons - Better sized -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Replay Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_replay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ”„ Replay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="#78909C"
            app:cornerRadius="28dp"
            android:layout_marginEnd="12dp"/>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Continue â–¶ï¸"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF6F00"
            app:cornerRadius="28dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- New Level Unlocked Message -->
    <TextView
        android:id="@+id/tv_unlock_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ðŸŽŠ Next Level Unlocked! ðŸŽŠ"
        android:textSize="15sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>
