<?xml version="1.0" encoding="utf-8"?>
<!-- Level Intro Dialog - Child-friendly cooking theme -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="#FFFDE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Chef Hat Emoji Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¨â€ðŸ³ Let's Cook! ðŸ‘¨â€ðŸ³"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:layout_marginBottom="16dp"/>

        <!-- Dish Image with decorative border -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFF8E1">
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/dish_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dish_spaghetti" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dish Name -->
        <TextView
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ðŸ Spaghetti Bolognese"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:id="@+id/dish_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Classic Italian pasta with rich meat sauce"
            android:textSize="14sp"
            android:textColor="#8D6E63"
            android:gravity="center" />

        <!-- Difficulty Badge -->
        <TextView
            android:id="@+id/difficulty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="â­ Difficulty: Easy"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:background="@drawable/bg_difficulty_badge" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textSize="15sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="26dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Start!"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="26dp"
                app:backgroundTint="#FF6F00"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Preview Words Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_preview_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ“š Preview Vocabulary"
            style="@style/Widget.Material3.Button.TextButton"
            app:icon="@drawable/ic_vocabulary"
            app:iconGravity="textStart"
            app:iconTint="#FF6F00" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
