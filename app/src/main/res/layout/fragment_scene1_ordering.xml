<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4B5">

    <!-- Restaurant Background - Warm cozy theme -->
    <View
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_restaurant_scene"/>

    <!-- Top Decorative Banner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:text="ðŸ½ï¸ Welcome to Master Chef Restaurant! ðŸ½ï¸"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:background="@drawable/bg_banner_decoration"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"/>

    <!-- Food Display (Menu Preview) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_food_preview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_placeholder"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spaghetti"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:gravity="center"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Characters Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingHorizontal="16dp">

        <!-- Chef Character with Speech Bubble -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Chef Speech Bubble -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bubble_chef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="140dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_chef_speech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Chef Character -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_chef"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_chef_character"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tv_chef_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¨â€ðŸ³ Chef"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:background="@drawable/bg_name_tag"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Customer (Kid) Character with Speech Bubble -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Customer Speech Bubble -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bubble_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="140dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E3F2FD"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_customer_speech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#1565C0"
                    android:lineSpacingExtra="4dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Customer Character -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_kid_character"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tv_customer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘§ You"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:background="@drawable/bg_name_tag_blue"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Bottom Dialog Panel - Main Interaction Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Speaker Indicator with Avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_speaker_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chef_avatar"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_speaker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Chef says:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"/>

                <!-- Speaker Button - Replay audio -->
                <ImageView
                    android:id="@+id/btn_speaker"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_speaker"
                    android:padding="10dp"
                    android:background="@drawable/bg_button_circle_orange"
                    android:contentDescription="Replay audio"/>
            </LinearLayout>

            <!-- Dialog Text with Karaoke Highlighting -->
            <TextView
                android:id="@+id/tv_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to our restaurant! What would you like to order today?"
                android:textSize="20sp"
                android:textColor="#333333"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="8dp"/>

            <!-- Vietnamese Translation -->
            <TextView
                android:id="@+id/tv_translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(ChÃ o má»«ng Ä‘áº¿n nhÃ  hÃ ng! HÃ´m nay báº¡n muá»‘n gá»i mÃ³n gÃ¬?)"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="16dp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- Continue Button - Large for kids -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Continue â–¶"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#4CAF50"
                    android:paddingHorizontal="32dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Skip Button - Small, top right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:text="Skip â­"
        android:textSize="14sp"
        android:textColor="#757575"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
</FrameLayout>
