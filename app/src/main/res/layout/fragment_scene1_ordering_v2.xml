<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ==================== BACKGROUND ==================== -->
    
    <!-- Restaurant Wall - Warm gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_restaurant_counter"/>

    <!-- Floor area at bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:background="#D7CCC8"/>

    <!-- ==================== MAIN CONTENT ==================== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ==================== TOP: Skip Button ==================== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_skip"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="SKIP â­ï¸"
                android:textSize="12sp"
                android:textColor="#757575"
                android:textAllCaps="false"/>
        </FrameLayout>

        <!-- ==================== BANNER: Welcome ==================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/tv_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:text="Welcome to Master Chef Restaurant!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E65100"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸"
                    android:textSize="24sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ==================== RESTAURANT SCENE ==================== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp">

                <!-- Menu Board (Top Left) -->
                <ImageView
                    android:id="@+id/iv_menu_board"
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_menu_board"
                    android:scaleType="fitCenter"/>

                <!-- Service Bell (Top Right) -->
                <ImageView
                    android:id="@+id/iv_service_bell"
                    android:layout_width="50dp"
                    android:layout_height="65dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_service_bell"
                    android:scaleType="fitCenter"/>

                <!-- Food Preview Card (Center Top) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_menu"
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_menu_board"
                    android:layout_marginTop="-20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_food_preview"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_dish_spaghetti"
                            android:scaleType="centerInside"/>

                        <TextView
                            android:id="@+id/tv_food_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Spaghetti Bolognese"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B35"
                            android:gravity="center"
                            android:maxLines="2"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Restaurant Counter -->
                <View
                    android:id="@+id/counter_surface"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_above="@id/characters_area"
                    android:layout_marginHorizontal="8dp"
                    android:background="#8D6E63"/>

                <!-- Characters Area -->
                <LinearLayout
                    android:id="@+id/characters_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="180dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:weightSum="2">

                    <!-- Chef Side -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <!-- Cash Register -->
                        <ImageView
                            android:id="@+id/iv_cash_register"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="top|end"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_cash_register"
                            android:scaleType="fitCenter"/>

                        <!-- Chef Speech Bubble -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bubble_chef"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="-20dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_chef_speech"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Welcome! What would you like?"
                                android:textSize="11sp"
                                android:textColor="#333333"
                                android:lineSpacingExtra="2dp"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Chef Character -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_chef"
                                android:layout_width="100dp"
                                android:layout_height="110dp"
                                android:src="@drawable/ic_chef_cute"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:id="@+id/tv_chef_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘¨â€ðŸ³ Chef"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/bg_button_circle_orange"
                                android:paddingHorizontal="14dp"
                                android:paddingVertical="4dp"/>
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Customer Side -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <!-- Order Ticket -->
                        <ImageView
                            android:id="@+id/iv_order_ticket"
                            android:layout_width="50dp"
                            android:layout_height="65dp"
                            android:layout_gravity="top|start"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_order_ticket"
                            android:scaleType="fitCenter"
                            android:rotation="-10"/>

                        <!-- Customer Character -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_customer"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_kid_character"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:id="@+id/tv_customer_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘§ You"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/bg_button_circle"
                                android:paddingHorizontal="14dp"
                                android:paddingVertical="4dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <!-- ==================== BOTTOM: Dialog Panel ==================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Speaker Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/iv_speaker_avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_chef_avatar"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_speaker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="ðŸ§‘â€ðŸ³ Chef says:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35"/>

                    <!-- Speaker Button -->
                    <ImageView
                        android:id="@+id/btn_speaker"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_speaker"
                        android:padding="10dp"
                        android:background="@drawable/bg_button_circle_orange"
                        android:contentDescription="Replay audio"/>
                </LinearLayout>

                <!-- Dialog Text -->
                <TextView
                    android:id="@+id/tv_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to our restaurant! What would you like to order today?"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="6dp"/>

                <!-- Vietnamese Translation -->
                <TextView
                    android:id="@+id/tv_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(ChÃ o má»«ng Ä‘áº¿n nhÃ  hÃ ng! HÃ´m nay báº¡n muá»‘n gá»i mÃ³n gÃ¬?)"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="12dp"/>

                <!-- Continue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Continue â–¶"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="26dp"
                    app:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Customer Speech Bubble (overlay) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bubble_customer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="260dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_customer_speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=""
            android:textSize="11sp"
            android:textColor="#1565C0"
            android:lineSpacingExtra="2dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
