<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- Supermarket Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_supermarket_scene"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar - Chef Request with Speech Bubble -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_chef_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <!-- Mini Chef Avatar -->
                <ImageView
                    android:id="@+id/iv_chef_mini"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_chef_character"
                    android:scaleType="fitCenter"/>

                <!-- Speech Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¨â€ðŸ³ Chef needs:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35"/>

                    <TextView
                        android:id="@+id/tv_ingredient_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please find the Tomato! ðŸ…"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_ingredient_vietnamese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(HÃ£y tÃ¬m CÃ  chua!)"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <!-- Speaker Button -->
                <ImageView
                    android:id="@+id/btn_speaker"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_speaker"
                    android:padding="10dp"
                    android:background="@drawable/bg_button_circle_orange"
                    android:contentDescription="Hear ingredient"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress:"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progress_ingredients"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/bg_progress_green"/>

            <TextView
                android:id="@+id/tv_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/6"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Shelf Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ðŸ›’ Tap the ingredient you need!"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/bg_shelf_label"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredients Shelves (Grid) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:clipToPadding="false"
            android:background="@drawable/bg_shelves"/>

        <!-- Bottom Cart Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <!-- Shopping Cart Icon with Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_cart_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_shopping_cart"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tv_cart_badge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_cart_badge"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </FrameLayout>

                <!-- Cart Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shopping Cart"
                        android:textSize="14sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tv_cart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 6 ingredients collected"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Clear Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Clear"
                    android:textSize="14sp"
                    app:cornerRadius="24dp"
                    app:strokeColor="#FF5722"
                    android:textColor="#FF5722"
                    android:layout_marginEnd="8dp"/>

                <!-- Checkout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Go Cook! ðŸ³"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#4CAF50"
                    android:enabled="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Feedback Overlay - Shows after selecting ingredient -->
    <FrameLayout
        android:id="@+id/overlay_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <TextView
                    android:id="@+id/tv_feedback_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ…"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/tv_feedback_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct! Well done!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</FrameLayout>
