<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ==================== KITCHEN BACKGROUND LAYERS ==================== -->
    
    <!-- Wall Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD"/>

    <!-- Kitchen Counter Background (bottom) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_kitchen_counter_surface"/>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ==================== TOP: Order Ticket Bar ==================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="#90CAF9">

            <!-- Customer Avatar -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="50dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_customer_girl"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/bg_button_circle_orange"
                    android:gravity="center"
                    android:text="!"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </FrameLayout>

            <!-- Order Ticket -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_order_ticket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFDE7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@drawable/bg_order_ticket"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“‹ "
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_step_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 4 / 18"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="#FF6F00"/>

                            <ProgressBar
                                android:id="@+id/progress_steps"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="50dp"
                                android:layout_height="5dp"
                                android:layout_marginStart="6dp"
                                android:max="100"
                                android:progress="22"
                                android:progressDrawable="@drawable/bg_progress_orange"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tap to chop the garlic"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#5D4037"
                            android:maxLines="2"/>

                        <TextView
                            android:id="@+id/tv_instruction_vn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Cháº¡m Ä‘á»ƒ bÄƒm tá»i)"
                            android:textSize="10sp"
                            android:textColor="#8D6E63"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_speaker"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_speaker"
                        android:padding="8dp"
                        android:background="@drawable/bg_button_circle_orange"
                        android:contentDescription="Hear instruction"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ==================== MAIN KITCHEN AREA ==================== -->
        <FrameLayout
            android:id="@+id/kitchen_main_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Kitchen Scene Layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp">

                <!-- ===== CHEF (Left side) ===== -->
                <FrameLayout
                    android:id="@+id/chef_container"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="95dp">

                    <!-- Chef Speech Bubble -->
                    <TextView
                        android:id="@+id/tv_chef_speech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginEnd="-10dp"
                        android:background="@drawable/bg_speech_bubble"
                        android:padding="6dp"
                        android:text="ðŸ‘¨â€ðŸ³"
                        android:textSize="14sp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_chef"
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:src="@drawable/ic_chef_cute"
                        android:scaleType="fitCenter"/>
                </FrameLayout>

                <!-- ===== KITCHEN COUNTER WITH TOOLS (Center-Right) ===== -->
                <LinearLayout
                    android:id="@+id/counter_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/chef_container"
                    android:layout_marginBottom="85dp"
                    android:layout_marginStart="-10dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal">

                    <!-- Cutting Board + Knife -->
                    <FrameLayout
                        android:id="@+id/cutting_board_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/iv_cutting_board"
                            android:layout_width="75dp"
                            android:layout_height="55dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_cutting_board"
                            android:scaleType="fitCenter"/>

                        <ImageView
                            android:id="@+id/iv_knife"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-5dp"
                            android:src="@drawable/ic_kitchen_knife"
                            android:scaleType="fitCenter"
                            android:rotation="-20"/>
                    </FrameLayout>

                    <!-- Stove + Pot/Pan -->
                    <FrameLayout
                        android:id="@+id/stove_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- Stove Base -->
                        <ImageView
                            android:id="@+id/iv_stove"
                            android:layout_width="120dp"
                            android:layout_height="95dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_stove"
                            android:scaleType="fitCenter"/>

                        <!-- Fire Flames -->
                        <ImageView
                            android:id="@+id/iv_fire"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="65dp"
                            android:src="@drawable/ic_fire_flames"
                            android:scaleType="fitCenter"/>

                        <!-- Cooking Vessel on Stove -->
                        <ImageView
                            android:id="@+id/iv_cooking_vessel"
                            android:layout_width="85dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_frying_pan"
                            android:scaleType="fitCenter"/>

                        <!-- Steam -->
                        <ImageView
                            android:id="@+id/iv_steam"
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="-15dp"
                            android:src="@drawable/ic_steam"
                            android:scaleType="fitCenter"
                            android:alpha="0.6"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <!-- Serving Plate -->
                    <FrameLayout
                        android:id="@+id/serving_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:id="@+id/iv_serving_plate"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_serving_plate"
                            android:scaleType="fitCenter"/>
                    </FrameLayout>

                    <!-- Wooden Spoon -->
                    <ImageView
                        android:id="@+id/iv_spoon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_wooden_spoon"
                        android:scaleType="fitCenter"
                        android:rotation="15"/>
                </LinearLayout>

                <!-- ===== DROP ZONE (Interactive overlay) ===== -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/drop_zone"
                    android:layout_width="120dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/counter_tools"
                    android:layout_marginBottom="-35dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/iv_drop_zone_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_frying_pan"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/tv_zone_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to Continue"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Success Check -->
                <TextView
                    android:id="@+id/tv_success_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="âœ“"
                    android:textSize="60sp"
                    android:textColor="#4CAF50"
                    android:visibility="gone"/>

                <!-- Cooking Animation -->
                <ImageView
                    android:id="@+id/iv_cooking_animation"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>
        </FrameLayout>

        <!-- ==================== BOTTOM: Ingredient Tray ==================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_ingredient_tray"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§º "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#5D4037"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (Long press &amp; drag)"
                        android:textSize="9sp"
                        android:textColor="#795548"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="16dp">

                    <LinearLayout
                        android:id="@+id/ingredient_palette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"/>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- ==================== OVERLAYS ==================== -->

    <!-- Timer Overlay -->
    <FrameLayout
        android:id="@+id/timer_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="22dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_cooking_pot"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tv_timer_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥"
                    android:textSize="26sp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tv_timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking..."
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FF6F00"
                    android:layout_marginTop="5dp"/>

                <ProgressBar
                    android:id="@+id/progress_timer"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="150dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/bg_progress_orange"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Completion Celebration -->
    <FrameLayout
        android:id="@+id/completion_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#E0FFF8E1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="22dp">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="118dp"
                android:src="@drawable/ic_chef_cute"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_complete_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="44sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tv_complete_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Complete!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spaghetti Bolognese"
                android:textSize="15sp"
                android:textColor="#FF6F00"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_serving_plate"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
