<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Square Review â­"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap any object to hear it again!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.9" />

        <!-- Summary Grid 2x3 -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:columnCount="3"
            app:rowCount="2"
            app:useDefaultMargins="true">

            <!-- Summary Card 1 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Summary Card 2 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Summary Card 3 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Summary Card 4 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Summary Card 5 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Summary Card 6 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp">

                <View
                    android:id="@+id/border6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_border_glow"
                    android:visibility="invisible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/summaryCard6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/summaryImg6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/summaryName6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

        </androidx.gridlayout.widget.GridLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Replay Button -->
            <Button
                android:id="@+id/btnReplay"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_button_secondary"
                android:paddingHorizontal="24dp"
                android:text="Replay ðŸ”„"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Next Shape Button -->
            <Button
                android:id="@+id/btnNextShape"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="32dp"
                android:text="Next Shape âž¡ï¸"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Celebration Overlay -->
    <View
        android:id="@+id/celebrationOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20FFFFFF"
        android:visibility="gone" />

</FrameLayout>
