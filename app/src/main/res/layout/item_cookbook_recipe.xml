<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32dp"
    android:layout_marginVertical="16dp"
    app:cardBackgroundColor="#FFF8DC"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Decoration Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8B4513"
            android:gravity="center"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ Mastered Recipe â­"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Dish Image in Circle Frame -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="90dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/dish_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder"
                    android:contentDescription="Dish image" />

            </androidx.cardview.widget.CardView>

            <!-- Dish Name with TTS Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spaghetti Bolognese"
                    android:textColor="#8B4513"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <!-- TTS Speaker Button -->
                <ImageButton
                    android:id="@+id/btn_speak_name"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_button_circle_orange"
                    android:contentDescription="Speak dish name"
                    android:padding="10dp"
                    android:src="@drawable/ic_volume"
                    app:tint="@color/white" />

            </LinearLayout>

            <!-- Star Rating Display -->
            <LinearLayout
                android:id="@+id/star_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_star_filled"
                    app:tint="#FFD700"
                    android:contentDescription="Star 1" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_star_filled"
                    app:tint="#FFD700"
                    android:contentDescription="Star 2" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_star_filled"
                    app:tint="#FFD700"
                    android:contentDescription="Star 3" />

            </LinearLayout>

            <!-- Vietnamese Name (optional) -->
            <TextView
                android:id="@+id/dish_name_vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="MÃ¬ Ã sá»‘t bÃ² báº±m"
                android:textColor="#A0522D"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Brief Description -->
            <TextView
                android:id="@+id/dish_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="A classic Italian pasta dish with rich tomato sauce"
                android:textColor="#8B4513"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5DEB3"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_details"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="ðŸ“‹ Details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

            <!-- Read Recipe Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_read_recipe"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6B35"
                android:text="ðŸ”Š Read"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
