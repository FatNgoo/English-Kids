<?xml version="1.0" encoding="utf-8"?>
<!--
    ðŸ§© Puzzle Picture Item Layout for Magic Notebook
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#2C1A4D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Puzzle Picture Preview (3x3 mini grid) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bg_puzzle_frame">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/puzzle_preview_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:padding="4dp"
                app:columnCount="3"
                app:rowCount="3" />

        </FrameLayout>

        <!-- World Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/world_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ²"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/world_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forest Kingdom"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/puzzle_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§© 8/8 completed"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
