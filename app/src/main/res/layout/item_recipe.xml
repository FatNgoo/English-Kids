<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Recipe Icon -->
        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_tool_pot"
            android:scaleType="centerInside"
            android:background="@drawable/bg_ingredient_slot"
            android:padding="8dp" />

        <!-- Recipe Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrot Soup"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_recipe_name_vi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Súp cà rốt"
                android:textColor="#8D6E63"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text_label"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Easy"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_steps_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="8 steps"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Play Button -->
        <ImageView
            android:id="@+id/btn_play_recipe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_right"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
