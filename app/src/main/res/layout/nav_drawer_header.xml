<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Avatar -->
    <FrameLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_profile_circle" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile" />
    </FrameLayout>

    <!-- Profile Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Buddy"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- Username -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.8"
        android:fontFamily="sans-serif-medium"
        android:text="@buddy_learner"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Stars Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text_label"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_badge_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black"
            android:text="125 Stars"
            android:textColor="@color/badge_gold"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
