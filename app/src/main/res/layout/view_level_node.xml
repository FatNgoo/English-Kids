<?xml version="1.0" encoding="utf-8"?>
<!-- Improved Level Node - Child-friendly cooking theme -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp">

    <!-- Dish Image with Card - Larger and more prominent -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFDE7">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_level_node_unlocked">

            <!-- Food/Dish Image -->
            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_food_placeholder" />

            <!-- Lock Icon Overlay -->
            <FrameLayout
                android:id="@+id/lock_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80757575"
                android:visibility="gone">
                
                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/white" />
            </FrameLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Level Number Badge -->
    <TextView
        android:id="@+id/level_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:text="Level 1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        android:background="@drawable/bg_level_badge" />

    <!-- Stars Container -->
    <LinearLayout
        android:id="@+id/stars_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_star_empty"
            app:tint="@color/yellow_gold" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star_empty"
            app:tint="@color/yellow_gold" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star_empty"
            app:tint="@color/yellow_gold" />

    </LinearLayout>

</LinearLayout>
